<u><h2 style="text-align: center"><%= @t.name %></h2></u>

<table>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
  </tr>
<% end %>
</table>

<form method="post" action="/topic/<%= @t.id %>/post/create">
  <label for="content">Add a comment</label>
  <input type="text" name="content">
  <input type="submit">
</form>
